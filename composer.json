{
  "name": "extalion/sentry",
  "description": "Sentry integration with prestashop",
  "type": "prestashop-module",
  "autoload": {
    "psr-4": {
      "Extalion\\Sentry\\": "src/"
    }
  },
  "config": {
    "prepend-autoloader": false,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "require-dev": {
    "phpmd/phpmd": "^2.10",
    "prestashop/php-dev-tools": "^4.2",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "require": {
    "php": ">=7.1",
    "sentry/sentry": "^3.22",
    "php-http/guzzle7-adapter": "^1.0",
    "nyholm/psr7": "^1.8"
  },
  "replace": {
    "guzzlehttp/promises": "*",
    "guzzlehttp/psr7": "*",
    "psr/container": "*",
    "psr/http-client": "*",
    "psr/http-factory": "*",
    "psr/http-message": "*",
    "psr/log": "*",
    "symfony/deprecation-contracts": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php80": "*"
  }
}
